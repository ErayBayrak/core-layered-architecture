@using EntityLayer.Concrete
@model List<Certificate>
@inject DataAccessLayer.Concrete.Context _context
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">

                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                @foreach (var item in Model.Where(x => x.CertificateStatus == true))
                                {
                                    <div class="tab-content">
                                        <div class="timeline timeline-inverse">
                                            <!-- timeline time label -->
                                            <div class="time-label">
                                                <span class="bg-success">
                                                    @(((DateTime)item.CertificateDate).ToString("Y"))
                                                    
                                                </span>
                                            </div>
                                            <div>
                                                <div class="timeline-item">
                                                    <div class="timeline-body">
                                                        @item.Description
                                                    </div>
                                                    <div class="timeline-footer">
                                                        <a href="/Certificate/UpdateCertificate/@item.CertificateID" class="btn btn-success btn-sm">Güncelle</a>
                                                        <a href="/Certificate/DeleteCertificate/@item.CertificateID" class="btn btn-danger btn-sm">Sil</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    <a class="btn btn-primary" href="/Certificate/AddCertificate/">Yeni Sertifika Ekle</a>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
    </div><!-- /.container-fluid -->

</body>
</html>


